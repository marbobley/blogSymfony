{% extends 'base.html.twig' %}

{% block title %}Gestion SEO - Les Chroniques du Code{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2 mb-0">Configurations SEO</h1>
                <a href="{{ path('app_seo_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-1"></i> Nouvelle configuration
                </a>
            </div>

            <div class="card shadow-sm border-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Identifiant</th>
                                <th>Titre SEO</th>
                                <th>Sitemap</th>
                                <th>NoIndex</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for seo in seos %}
                                <tr>
                                    <td class="fw-bold">{{ seo.pageIdentifier }}</td>
                                    <td>{{ seo.title|default('---') }}</td>
                                    <td>
                                        {% if seo.inSitemap %}
                                            <span class="badge bg-success-subtle text-success border border-success-subtle">Oui</span>
                                        {% else %}
                                            <span class="badge bg-light text-muted border">Non</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if seo.isNoIndex %}
                                            <span class="badge bg-warning-subtle text-warning border border-warning-subtle">Oui</span>
                                        {% else %}
                                            <span class="badge bg-light text-muted border">Non</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a href="{{ path('app_seo_edit', {'identifier': seo.pageIdentifier}) }}" class="btn btn-sm btn-outline-primary" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_seo_delete', {'identifier': seo.pageIdentifier}) }}" onsubmit="return confirm('Supprimer cette configuration ?');" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ seo.pageIdentifier) }}">
                                                <button class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted">
                                        Aucune configuration SEO trouv√©e.
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
