{% extends 'base.html.twig' %}

{% block title %}Nouvelle configuration SEO - Les Chroniques du Code{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="mb-4">
                <a href="{{ path('app_seo_index') }}" class="btn btn-link text-decoration-none p-0">
                    <i class="bi bi-arrow-left me-1"></i> Retour Ã  la liste
                </a>
                <h1 class="h2 mt-2">Nouvelle configuration SEO</h1>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.pageIdentifier) }}
                            </div>
                        </div>

                        {{ form_row(form.core) }}
                        <hr class="my-4">
                        <h5 class="mb-3">Open Graph & Twitter</h5>
                        {{ form_row(form.social) }}
                        <hr class="my-4">
                        <h5 class="mb-3">Indexation & Sitemap</h5>
                        {{ form_row(form.sitemap) }}
                        <hr class="my-4">
                        <h5 class="mb-3">Autres</h5>
                        {{ form_row(form.meta) }}

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="{{ path('app_seo_index') }}" class="btn btn-light">Annuler</a>
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
