{% extends 'base.html.twig' %}

{% block title %}Modifier la configuration SEO - {{ seo.pageIdentifier }} - Les Chroniques du Code{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="mb-4">
                <a href="{{ path('app_seo_index') }}" class="btn btn-link text-decoration-none p-0">
                    <i class="bi bi-arrow-left me-1"></i> Retour à la liste
                </a>
                <h1 class="h2 mt-2">Modifier la configuration SEO : <small class="text-muted">{{ seo.pageIdentifier }}</small></h1>
            </div>
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">

                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.pageIdentifier) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.core.title) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.core.metaDescription) }}
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.core.canonicalUrl) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.core.favicon) }}
                                {% if seo.core.favicon %}
                                    <div class="mt-2">
                                        <p class="small text-muted mb-1">Favicon actuelle :</p>
                                        <img src="{{ seo.core.favicon starts with 'http' ? seo.core.favicon : asset(seo.core.favicon) }}" alt="Favicon" class="img-thumbnail" style="max-height: 50px;">
                                    </div>
                                {% endif %}
                                {{ form_row(form.core.faviconFile) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.core.metaRobots) }}
                            </div>
                        </div>

                        <hr class="my-4">
                        <h5 class="mb-3">Open Graph & Twitter</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.social.ogTitle) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.social.ogType) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.social.ogDescription) }}
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.social.ogImage) }}
                                {% if seo.social.ogImage %}
                                    <div class="mt-2">
                                        <p class="small text-muted mb-1">Aperçu :</p>
                                        <img src="{{ asset(seo.social.ogImage) }}" alt="Aperçu" class="img-thumbnail" style="max-height: 150px;">
                                    </div>
                                {% endif %}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.social.ogImageFile) }}
                                {{ form_row(form.social.twitterCard) }}
                            </div>
                        </div>

                        <hr class="my-4">
                        <h5 class="mb-3">Indexation & Sitemap</h5>

                        <div class="row align-items-center">
                            <div class="col-md-3 mb-3">
                                {{ form_row(form.sitemap.inSitemap) }}
                            </div>
                            <div class="col-md-3 mb-3">
                                {{ form_row(form.meta.isNoIndex) }}
                            </div>
                            <div class="col-md-3 mb-3">
                                {{ form_row(form.sitemap.changefreq) }}
                            </div>
                            <div class="col-md-3 mb-3">
                                {{ form_row(form.sitemap.priority) }}
                            </div>
                        </div>

                        <hr class="my-4">
                        <h5 class="mb-3">Autres</h5>

                        <div class="mb-3">
                            {{ form_row(form.meta.breadcrumbTitle) }}
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="{{ path('app_seo_index') }}" class="btn btn-light">Annuler</a>
                            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
