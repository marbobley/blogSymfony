<footer class="bg-dark text-white py-5 mt-5">
    <div class="container text-center">
        <p class="mb-2 fw-bold">Les Chroniques du Code &copy; {{ "now"|date("Y") }}</p>
        <p class="text-muted small mb-0">Développé avec passion pour le web inclusif et responsive.</p>
        <div class="mt-3">
            {% for link in this.socialLinks %}
                <a href="{{ link.url }}"
                   class="text-white-50 me-3 transition-base"
                   aria-label="Lien vers {{ link.platformName }}"
                   target="_blank"
                   rel="noopener noreferrer">
                    <i class="bi {{ link.iconClass }}"></i>
                </a>
            {% endfor %}
        </div>
    </div>
</footer>
