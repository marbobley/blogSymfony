<div class="share-buttons">
    <span class="text-muted small me-2">Partager :</span>
    {% for link in this.links %}
        <a href="{{ link.url }}"
           target="_blank"
           rel="noopener noreferrer"
           class="btn btn-sm btn-light border-0 transition-base"
           title="Partager sur {{ link.name }}">
            <i class="bi bi-{{ link.name|lower }}"></i>
        </a>
    {% endfor %}
</div>
