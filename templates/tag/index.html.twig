{% extends 'base.html.twig' %}

{% block title %}Liste des tags{% endblock %}

{% block body %}
    <twig:PageHeader
        title="Tags"
        subtitle="Gérez les tags de votre blog"
        :createPath="is_granted('ROLE_ADMIN') ? path('app_tag_new') : null"
        createLabel="Nouveau tag"
    />

    <div class="row g-4">
        {% for tag in tags %}
            <div class="col-12 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0 animate-fade-in transition-base">
                    <div class="card-body d-flex flex-column align-items-center text-center">
                        <h2 class="h5 card-title fw-bold mb-3">
                            <twig:TagBadge :tag="tag" class="badge bg-primary-subtle text-primary border border-primary-subtle px-3 py-2 text-decoration-none" />
                        </h2>

                        <div class="mt-auto d-flex gap-2">
                            <a href="{{ path('app_tag_show', {'slug': tag.slug}) }}" class="btn btn-outline-info btn-sm transition-base">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn btn-outline-primary btn-sm transition-base">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" action="{{ path('app_tag_delete', {'id': tag.id}) }}" onsubmit="return confirm('Supprimer ce tag ?');" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
                                    <button class="btn btn-outline-danger btn-sm transition-base">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center py-5">
                <div class="p-5 bg-white rounded shadow-sm">
                    <i class="bi bi-tags display-1 text-muted mb-3"></i>
                    <p class="h4 text-muted">Aucun tag trouvé.</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
