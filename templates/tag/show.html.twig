{% extends 'base.html.twig' %}

{% block title %}Articles taggués : {{ tag.name }}{% endblock %}

{% block body %}
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="h2 fw-bold text-dark mb-0">
                Articles pour le tag <span class="badge bg-primary-subtle text-primary border border-primary-subtle px-3 py-2 ms-2"><i class="bi bi-tag me-1"></i> {{ tag.name }}</span>
            </h1>
            <p class="text-muted small mt-2">Découvrez tous les articles associés à ce tag</p>
        </div>
        <div class="col-auto">
            <a href="{{ path('app_tag_index') }}" class="btn btn-link text-decoration-none transition-base">
                <i class="bi bi-arrow-left me-1"></i> Tous les tags
            </a>
        </div>
    </div>

    <div class="row g-4">
        {% for post in posts %}
            <div class="col-12 col-md-6 col-lg-4">
                <article class="card h-100 shadow-sm border-0 animate-fade-in transition-base">
                    <div class="card-body d-flex flex-column">
                        <h2 class="h4 card-title fw-bold">
                            <a href="{{ path('app_post_show', {'slug': post.slug}) }}" class="text-decoration-none text-dark">{{ post.title }}</a>
                        </h2>
                        <div class="mb-3 d-flex flex-wrap gap-2">
                            <span class="badge bg-light text-primary border border-primary-subtle px-2 py-1">
                                <i class="bi bi-calendar3 me-1"></i> {{ post.createdAt|date('d/m/Y') }}
                            </span>
                        </div>
                        <p class="card-text text-muted flex-grow-1">
                            {{ post.content|slice(0, 150) }}{{ post.content|length > 150 ? '...' : '' }}
                        </p>
                        <div class="mt-3">
                            <a href="{{ path('app_post_show', {'slug': post.slug}) }}" class="btn btn-outline-primary w-100 transition-base">
                                Lire la suite
                            </a>
                        </div>
                    </div>
                </article>
            </div>
        {% else %}
            <div class="col-12 text-center py-5">
                <div class="p-5 bg-white rounded shadow-sm">
                    <i class="bi bi-journal-x display-1 text-muted mb-3"></i>
                    <p class="h4 text-muted">Aucun article trouvé pour ce tag.</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
