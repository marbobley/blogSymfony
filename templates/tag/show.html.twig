{% extends 'base.html.twig' %}

{% block title %}Articles taggués : {{ tag.name }}{% endblock %}

{% block body %}
    <twig:PageHeader
        title="Articles pour"
        :badge="tag.name"
        subtitle="Découvrez tous les articles associés à ce tag"
        :searchTerm="app.request.query.get('q')"
        :clearSearchPath="path('app_tag_show', {slug: tag.slug})"
        :backPath="path('app_tag_index')"
        backLabel="Tous les tags"
    />

    <twig:PostGrid
        :posts="posts"
        emptyMessage="Aucun article trouvé pour ce tag."
    />
{% endblock %}
