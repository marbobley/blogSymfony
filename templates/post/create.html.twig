{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel article{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 animate-fade-in">
                <div class="card-body p-4 p-md-5">
                    <div class="mb-4 text-center">
                        <i class="bi bi-pencil-square display-4 text-primary mb-2"></i>
                        <h1 class="h3 fw-bold">Nouvel Article</h1>
                        <p class="text-muted">Partagez vos idées avec le monde.</p>
                    </div>
                    {{ form_start(form) }}
                        {{ form_row(form.title) }}
                        {{ form_row(form.content) }}
                        <button type="submit" class="btn btn-primary">Save</button>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
