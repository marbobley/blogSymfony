{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel article{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 animate-fade-in">
                <div class="card-body p-4 p-md-5">
                    <div class="mb-4 text-center">
                        <i class="bi bi-pencil-square display-4 text-primary mb-2"></i>
                        <h1 class="h3 fw-bold">Nouvel Article</h1>
                        <p class="text-muted">Partagez vos idées avec le monde.</p>
                    </div>

                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="mb-4">
                            {{ form_label(form.title, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.title) }}
                            <div class="form-text small">Le titre doit être explicite et donner envie de lire.</div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.content, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.content) }}
                        </div>

                        <div class="d-grid gap-3 d-md-flex justify-content-md-end mt-5">
                            <a href="{{ path('app_post_index') }}" class="btn btn-light px-4 transition-base">Annuler</a>
                            <button type="submit" class="btn btn-primary px-5 transition-base">
                                <i class="bi bi-check-circle me-1"></i> Publier l'article
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
