{% extends 'base.html.twig' %}

{% block title %}Liste des posts{% endblock %}

{% block body %}
    <div class="row mb-4 align-items-center">
        <div class="col-12 col-md-6">
            <h1 class="h2 fw-bold text-dark mb-0">Derniers Articles</h1>
            <p class="text-muted small">Découvrez nos dernières publications</p>
        </div>
        <div class="col-12 col-md-6">
            <form action="{{ path('app_post_index') }}" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Rechercher un article..." value="{{ app.request.query.get('q') }}">
                    <button class="btn btn-outline-primary" type="submit">
                        <i class="bi bi-search"></i> Rechercher
                    </button>
                    {% if app.request.query.get('q') %}
                        <a href="{{ path('app_post_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>

    <div class="row g-4">
        {% for post in posts %}
            <div class="col-12 col-md-6 col-lg-4">
                <twig:PostCard :post="post" :showActions="true" />
            </div>
        {% else %}
            <div class="col-12 text-center py-5">
                <div class="p-5 bg-white rounded shadow-sm">
                    <i class="bi bi-journal-x display-1 text-muted mb-3"></i>
                    <p class="h4 text-muted">Aucun article trouvé pour le moment.</p>
                    <a href="{{ path('app_post_new') }}" class="btn btn-primary mt-3 transition-base">
                        Créer le premier article
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
