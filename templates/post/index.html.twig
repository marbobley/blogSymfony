{% extends 'base.html.twig' %}

{% block title %}Liste des posts{% endblock %}

{% block body %}
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="h2 fw-bold text-dark mb-0">Derniers Articles</h1>
            <p class="text-muted small">Découvrez nos dernières publications</p>
        </div>
    </div>

    <div class="row g-4">
        {% for post in posts %}
            <div class="col-12 col-md-6 col-lg-4">
                <article class="card h-100 shadow-sm border-0 animate-fade-in transition-base">
                    <div class="card-body d-flex flex-column">
                        <h2 class="h4 card-title fw-bold">
                            <a href="{{ path('app_post_show', {'id': post.id}) }}" class="text-decoration-none text-dark">{{ post.title }}</a>
                        </h2>
                        <div class="mb-3">
                            <span class="badge bg-light text-primary border border-primary-subtle px-2 py-1">
                                <i class="bi bi-calendar3 me-1"></i> {{ post.createdAt|date('d/m/Y') }}
                            </span>
                        </div>
                        <p class="card-text text-muted flex-grow-1">
                            {{ post.content|slice(0, 150) }}{{ post.content|length > 150 ? '...' : '' }}
                        </p>
                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="mt-3 d-flex gap-2">
                                <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-outline-primary flex-grow-1 transition-base">
                                    <i class="bi bi-pencil me-1"></i> Modifier
                                </a>
                                <form method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" onsubmit="return confirm('Supprimer cet article ?');" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                    <button class="btn btn-outline-danger transition-base" aria-label="Supprimer">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        {% endif %}
                    </div>
                </article>
            </div>
        {% else %}
            <div class="col-12 text-center py-5">
                <div class="p-5 bg-white rounded shadow-sm">
                    <i class="bi bi-journal-x display-1 text-muted mb-3"></i>
                    <p class="h4 text-muted">Aucun article trouvé pour le moment.</p>
                    <a href="{{ path('app_post_new') }}" class="btn btn-primary mt-3 transition-base">
                        Créer le premier article
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
