{% extends 'base.html.twig' %}

{% block title %}Liste des posts{% endblock %}

{% block body %}
    <twig:PageHeader
        title="Derniers Articles"
        subtitle="Découvrez nos dernières publications"
        :searchTerm="app.request.query.get('q')"
        :clearSearchPath="path('app_post_index')"
    />

    <twig:PostGrid
        :posts="posts|sort((a, b) => b.createdAt <=> a.createdAt)"
        :showActions="true"
        :showCreateButton="true"
    />
{% endblock %}
